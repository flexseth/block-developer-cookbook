{
	"customTemplates": [],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#1E1E3F",
					"name": "Card",
					"slug": "card"
				},
				{
					"color": "#F2ECFF",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#F9F871",
					"name": "Highlight",
					"slug": "highlight"
				},
				{
					"color": "#DBEFEF",
					"name": "Background",
					"slug": "background"
				}
			]
		},
		"layout": {
			"contentSize": "60rem",
			"wideSize": "64rem"
		},
		"typography": {
			"dropCap": true,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Prata",
							"fontStyle": "normal",
							"fontWeight": "bold",
							"src": [
								"file:./assets/fonts/Prata/Prata-Regular.ttf"
							]
						}
					],
					"fontFamily": "Prata",
					"name": "Prata",
					"slug": "prata"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"block-developers-cookbook/time-remaining": {
				"color": {
					"text": "var(--wp--preset--color--card)"
				}
			},
			"chef-kiss/level": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )"
				}
			},
			"chef-kiss/cooking-time": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )"
				}
			},
			"core/group": {
				"css": "&.recipe-container { background-color: var(--wp--preset--color--card);} &.recipe-container .number-value {color: var(--wp--preset--color--highlight);}"
			},
			"core/post-excerpt": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--medium )"
				}
			}
		},
		"color": {
			"background": "var( --wp--preset--color--background)",
			"text": "var( --wp--preset--color--text )"
		},
		"typography": {
			"fontFamily": "var( --wp--preset--font-family--prata )",
			"fontSize": "var( --wp--preset--font-size--medium )"
		},
		"elements": {
			"button": {
				"color": {
					"background": "var( --wp--preset--color--background)",
					"text": "var( --wp--preset--color--background)"
				}
			},
			"heading": {
				"color": {
					"text": "var( --wp--preset--color--highlight)"
				},
				"typography": {
					"fontFamily": "var( --wp--preset--font-family--prata )",
					"fontSize": "var( --wp--preset--font-size--large )"
				}
			}
		},
		"spacing": {
			"blockGap": "2rem",
			"margin": {
				"bottom": "1rem",
				"left": "3rem",
				"right": "3rem",
				"top": "1rem"
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "sidebar",
			"name": "sidebar",
			"title": "Sidebar"
		}
	],
	"version": 2,
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json"
}
